{
  "name": "course-terrain-tool",
  "version": "1.0.0",
  "description": "An open source tool to find and process terrain data for use in the OPCD golf course design process",
  "workspaces": [
    "client",
    "server",
    "app"
  ],
  "main": "app/main.js",
  "build": {
    "npmRebuild": false,
    "appId": "com.opengolfsim.ctt",
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  },
  "scripts": {
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1",
    "client": "npm run debug --workspace=client",
    "server": "npm start --workspace=server",
    "build": "npm run build --workspace=client",
    "develop": "CTC_DEBUG=1 concurrently --kill-others 'npm run debug --workspace=client' 'npm start --workspace=server'",
    "start": "npm start --workspace=server",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron-builder": "^25.1.8"
  },
  "volta": {
    "node": "20.18.1"
  }
}
